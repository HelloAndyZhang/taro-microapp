{
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "./src",
    "module": "commonjs",
    "sourceMap": false,
    "paths": {
      "webpack": ["./node_modules/@types/webpack", "../../node_modules/@types/webpack", "./node_modules/webpack"],
      "webpack-dev-server": ["./types/slim.d.ts"],
    },
    "preserveConstEnums": false,
    "typeRoots": ["./types", "./node_modules/@types", "../../node_modules/@types"],
    "noImplicitThis": false,
    "lib": ["ES5", "ES6", "DOM"],
    "importHelpers":false,
    /* 严格的类型检查选项 */
    "strict": false, // 启用所有严格类型检查选项
    "noImplicitAny": false, // 在表达式和声明上有隐含的 any类型时报错
    "strictNullChecks": false, // 启用严格的 null 检查
    "alwaysStrict": false, // 以严格模式检查每个模块，并在每个文件里加入 'use strict'
    "allowJs": true,
    "declaration": false

  },
  "include": ["./src", "./types"],
  "exclude": [
    "./src/__tests__",
    "./src/template/comp.ts",
    "./src/quickapp",
    "./src/loaders/quickappStyleLoader.ts",
  ],
}
