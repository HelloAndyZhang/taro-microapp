{
  "private": true,
  "name": "taro-microapp",
  "version": "1.0.0",
  "description": "Taro 微应用壳子",
  "homepage": "https://github.com/",
  "author": "UUFE",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "build": "pnpm -r --filter=./packages/* run build",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clear-all": "rimraf **/node_modules",
    "format": "prettier --cache --write .",
    "jest": "jest",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "tsc:check": "tsc --noEmit",
    "turbo:clean": "rimraf .turbo"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --cache --write"
    ],
    "*.ts?(x)": [
      "prettier --cache --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@pnpm/lockfile-file": "^5.0.3",
    "@pnpm/logger": "^4.0.0",
    "@taro-microapp/build-microapp-plugin": "workspace:*",
    "@taro-microapp/write-config-plugin": "workspace:*",
    "@tarojs/helper": "3.3.12",
    "@tarojs/mini-runner": "3.3.12",
    "@tarojs/service": "3.3.12",
    "@tarojs/taro": "3.3.12",
    "@types/jest": "^27.5.1",
    "@types/node": "^18.7.16",
    "@types/webpack-env": "^1.13.6",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.2",
    "only-allow": "^1.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.18",
    "rimraf": "^3.0.0",
    "turbo": "^1.3.1",
    "typescript": "^4.7.2"
  }
}
