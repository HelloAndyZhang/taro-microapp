{
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "cov": "jest --coverage",
    "dep:update": "pnpm up --interactive --latest --recursive",
    "format": "prettier --cache --write .",
    "format:docs": "prettier --cache 'docs/**/*.{md,mdx}' --write --ignore-path .gitignore --ignore-unknown",
    "format:plugin-docs": "prettier --cache 'packages/plugin-docs/**/*' --write --ignore-unknown",
    "postinstall": "patch-package",
    "jest": "jest",
    "prepare": "husky install",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "tsc:check": "tsc --noEmit",
    "turbo:clean": "rimraf .turbo"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },

  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --cache --write"
    ],
    "*.ts?(x)": [
      "prettier --cache --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@pnpm/lockfile-file": "^5.0.3",
    "@pnpm/logger": "^4.0.0",
    "@types/jest": "^27.5.1",
    "father": "^4.0.0-rc.9",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "only-allow": "^1.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.18",
    "turbo": "^1.3.1",
    "typescript": "^4.7.2",
    "patch-package": "^6.4.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "compiledConfig": {

  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack",
        "eslint",
        "stylelint"
      ]
    }
  }
}
